{% extends 'user/base.html.twig' %}

{% block title %}User {{ user.email }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('user.index') }}">Users</a></li>
        <li class="breadcrumb-item active">{{ user.email }}</li>
    </ol>
{% endblock %}

{% block body %}
    <h1>User {{ user.email }}</h1>

    <div class="row m-3">
        <div class="col-2">
            <a href="{{ path('user.edit', {'id': user.id}) }}" class="btn btn-primary btn-block">edit</a>
        </div>
        <div class="col-2">
            {% if user.isBanned %}
                {{ include('user/user/_unban_form.html.twig') }}
            {% else %}
                {{ include('user/user/_ban_form.html.twig') }}
            {% endif %}
        </div>
        <div class="col-2">
            {{ include('user/user/_delete_form.html.twig') }}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>Last Login Time</th>
                <td>{{ user.lastLoginTime ? user.lastLoginTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
